{
  "name": "packing-rollup",
  "version": "1.0.0",
  "description": "Simple Boilerplate for package react components as modules using rollup",
  "repository": "https://github.com/GerardoGallegos/react-rollup-boilerplate.git",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "size": "size-limit",
    "build": "rollup -c",
    "start": "rollup -c -w"
  },
  "size-limit": [
    {
      "path": "dist/index.prod.js",
      "limit": "6 KB"
    }
  ],
  "keywords": [
    "rollup",
    "boilerplate",
    "react",
    "babel"
  ],
  "author": "Gerardo Gallegos <puxerop@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^9.0.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "rollup": "^0.66.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-uglify": "^6.0.0",
    "rollup-plugin-url": "^1.4.0",
    "size-limit": "^0.20.0",
    "standard": "^12.0.1",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "styled-components": "^3.4.8"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "files": [
    "dist"
  ]
}
